# =============================================================================
# OAuth Provider (oauth.com)
# =============================================================================
# Register your application at oauth.com and fill in these values.
# Callback URL to register: http://localhost:8080/auth/oauth/generic/callback
OAUTH_GENERIC_CLIENT_ID=your-oauth-client-id
OAUTH_GENERIC_CLIENT_SECRET=your-oauth-client-secret
OAUTH_GENERIC_AUTH_URL=https://oauth.com/authorize
OAUTH_GENERIC_TOKEN_URL=https://oauth.com/token
OAUTH_GENERIC_USER_INFO_URL=https://oauth.com/userinfo
OAUTH_GENERIC_SCOPES=openid profile email

# =============================================================================
# Chainlit
# =============================================================================
# Random secret for signing Chainlit session cookies (generate with: openssl rand -hex 32)
CHAINLIT_AUTH_SECRET=change-me-to-a-random-secret
CHAINLIT_URL=http://localhost:8080

# =============================================================================
# MCP Server
# =============================================================================
MCP_SERVER_PORT=8001
MCP_SERVER_URL=http://localhost:8001/mcp

# =============================================================================
# Downstream API (Pattern 1: Resource Caching)
# =============================================================================
# URL of the downstream service whose data is cached by the MCP server.
# Leave empty to start with an empty cache (demo mode).
DOWNSTREAM_API_URL=
CACHE_TTL_SECONDS=300

# =============================================================================
# LLM Provider
# =============================================================================
OPENAI_API_KEY=your-openai-api-key
